#script to find out where all runnign suites have got to...

cylc scan > out

clear >$(tty)

echo 'looping through running workflows using...'
echo '> cylc scan'
echo -e 'here we go...\n'

count=0

while read p 

    do 
        (( count++ ))
        echo ${count}')'
        echo 'workflow name is ---> '${p%% *} 
        runprog ${p%% *} 
    done < out; 

rm out

