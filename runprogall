#script to run `cylc monitor` on all suites listed by `cylc scan`

cylc scan > out

clear >$(tty)


while read p 
    do 
        #echo '---------------------------------------------------------'
        echo ''
        echo ${p%% *} 
        runprog ${p%% *} 
        #cylc monitor -ro  ${p%% *}
    done < out; 

rm out

