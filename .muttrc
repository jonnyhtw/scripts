source ~/.mutt/.muttrc-private
bind index G imap-fetch-mail
set mark_old=no

source ~/scripts/.muttrc-colours
auto_view text/html
set mail_check=300
set timeout=30
set editor="vim"
set header_cache="~/.mutt/cache/bodies"
set sort = reverse-threads
set sort = reverse-date-received
set mailcap_path = ~/scripts/.mailcap
set pager_index_lines=10
set alias_file=~/.mutt/aliases # where I keep my aliases
source $alias_file

auto_view text/x-vcard text/html text/enriched
set smtp_authenticators = "login"


macro index A \
    "<tag-pattern>~N<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" \
    "mark all new as read"

set index_format="%F %T"
set index_format="%Z %{%Y %b %e  %H:%M} %?X?(%X)&   ? %-22.22F  %.100s %> %5c "

# Header related stuff
#ignore "Authentication-Results:"
#ignore "DomainKey-Signature:"
#ignore "DKIM-Signature:"
#hdr_order Date From To Cc
#
#ignore *
#unignore from: date subject to cc
#unignore x-mailing-list: posted-to:
#unignore x-mailer:

# Sorting, Markers etc.
#set markers=no # don't put '+' at the beginning of wrapped lines
#set pager_index_lines= 5 # how large is the index window?
#set sort = 'threads'
#set sort_aux = 'last-date-received'
#set forward_format = "Fw: %s"
# set up the sidebar
set sidebar_width=24
set sidebar_visible=yes
#set sidebar_delim='|'
#set sidebar_sort=no

# which mailboxes to list in the sidebar,
# you can add your Labels in Gmail to the Sidebar.
mailboxes = "+[Gmail]/INBOX"= "+[Gmail]/Sent Mail"

# color of folders with new mail
color sidebar_new yellow default

